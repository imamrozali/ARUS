{
  "name": "@arus/common",
  "version": "0.1.0",
  "description": "Shared utilities, helpers, constants, and types for ARUS packages",
  "author": "Muhammad Imam Rozali <Nusa Innovation | muh.imamrozali@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
